<%= form_for @pool, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :start_time, :class => 'datepicker', :value => Time.now.to_formatted_s(:picker) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :end_time, :class => 'text_field', :value => (Time.now + 1.days).to_formatted_s(:picker)  %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :league_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :league_id, League.all.collect {|l| [l.name, l.id]} %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pools_path, :class => 'btn' %>
  </div>
<% end %>
