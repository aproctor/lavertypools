<%- model_class = Pick -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:player_id) %>:</strong></dt>
  <dd><%= @pick.player_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:match_id) %>:</strong></dt>
  <dd><%= @pick.match_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pool_id) %>:</strong></dt>
  <dd><%= @pick.pool_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:winner) %>:</strong></dt>
  <dd><%= @pick.winner %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              picks_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pick_path(@pick), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pick_path(@pick),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
